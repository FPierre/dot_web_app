<div class="row">
  <div class="col s12">
    <h2 class="center-align">Utilisateurs</h2>
  </div>
</div>

<% if @users_to_approve.present? %>
<div class="row">
  <div class="col s6 offset-s3">
    <ul class="collection">
      <% @users_to_approve.each do |user| %>
        <li class="collection-item avatar">
          <img src="images/yuna.jpg" alt="" class="circle">

          <span class="title"><%= user.email %></span>
          <p><%= user.created_at %></p>
          <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
        </li>
      <% end %>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col s6 offset-s3">
    <ul class="collection">
      <% @users.each do |user| %>
        <li class="collection-item avatar">
          <img src="images/yuna.jpg" alt="" class="circle">

          <span class="title"><%= user.email %></span>
          <p><%= user.created_at %></p>
          <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
        </li>
      <% end %>
    </div>
  </div>
</div>
