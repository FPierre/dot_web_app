                .col.s3
                  i.material-icons record_voice_over

                .col.s7
                  | Commandes vocales

        li.separator

        li
          .hide-on-med-and-down
            a href='#' @click.stop="changeCurrentView('setting-show')"
              .row
                .col.s3
                  i.material-icons settings

                .col.s7
                  | Paramètres

          .hide-on-large-only
            a href='#' @click.prevent="changeCurrentView('setting-show')"
                .row
                  .col.s3
                    i.material-icons settings

                  .col.s7
