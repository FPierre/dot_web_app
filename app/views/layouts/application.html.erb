<!DOCTYPE html>
<html>
  <head>
    <title>ItnovemWebApp</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <%= render 'header' %>

    <% if notice || alert %>
      <div class="row">
        <div class="col s12">
          <p class="notice center-text"><%= notice %></p>
          <p class="alert center-text"><%= alert %></p>
        </div>
      </div>
    <% end %>

    <main><%= yield %></main>
  </body>
</html>
